<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <!-- Filter EditText -->

  <EditText
      android:id="@+id/et_filter"
      android:layout_width="match_parent"
      android:layout_height="@dimen/filter_edit_text_height"
      android:layout_alignParentBottom="true"
      android:padding="@dimen/filter_edit_text_padding"
      tools:text="Filter"
      android:background="@color/black"
      android:textColor="@color/white"
      android:drawableRight="@android:drawable/ic_menu_share"/>

  <!-- ListView full of traces -->

  <ListView
      android:id="@+id/lv_traces"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:dividerHeight="@dimen/divider_height"
      android:divider="@color/white"
      android:background="@color/black"
      android:stackFromBottom="true"
      android:layout_above="@id/et_filter"/>


</merge>